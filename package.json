{
  "name": "done",
  "version": "5.1.2",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "tsx scripts/generate-commit-info.ts && vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:ci": "vitest run",
    "generate-commit-info": "tsx scripts/generate-commit-info.ts",
    "build-only": "npm run generate-commit-info && vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix --cache",
    "validate": "run-s lint type-check test:ci build-only",
    "format": "prettier --write --experimental-cli src/"
  },
  "dependencies": {
    "autoprefixer": "^10.4.23",
    "dexie": "^4.2.1",
    "firebase": "^12.6.0",
    "lucide-vue-next": "^0.562.0",
    "pinia": "^3.0.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "vue": "^3.5.25",
    "vue-i18n": "^9.14.5",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@tsconfig/node24": "^24.0.3",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/eslint-plugin": "^1.5.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "~10.5.1",
    "fake-indexeddb": "^6.2.5",
    "jiti": "^2.6.1",
    "jsdom": "^27.2.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "tsx": "^4.19.2",
    "typescript": "~5.9.0",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vitest": "^4.0.14",
    "vue-tsc": "^3.1.5"
  }
}
